---
import NavAstro from "./NavAstro.astro";
---

<header>
    <nav>
        <div class="icons">
            <NavAstro 
                icon="fa-solid fa-house"
                name=""
                tag="home"
                url="/"
            />
            <NavAstro 
                icon="fa-solid fa-bars"
                name=""
                tag="hamburger"
                url="#"
            />
        </div>
        <div class="links">
            <NavAstro 
                icon=""
                name="astro"
                tag="astro"
                url="/astro/"
            />
            <NavAstro 
                icon=""
                name="about me"
                tag="about"
                url="/astro/about/"
            />
            <NavAstro 
                icon=""
                name="blog"
                tag="blog"
                url="/astro/blog/"
            />
        </div>
    </nav>
    <div class="logo">
        <img src="https://cdn.buttercms.com/xrVbfdR5TBy4iTaY4xl7" alt="Logo Astro">
    </div>
</header>

<style>
    .icons{
        display: flex;
        align-items: center;
    }
    .links{
        display: none;
        text-align: end;
    }
    .logo{
        border: 1px solid rgba(0, 0, 0, 0.5);
        padding: 0.5rem;
        padding-bottom: 0;
        border-radius: 0.5rem;
    }
    .logo img{
        width: 100%;
        border-radius: 0.5rem;
    }
    .expanded {
        display: unset;
    }
    @media screen and (min-width: 636px){
        nav{
            display: flex;
            justify-content: space-between;
        }
        .links{
            display: flex;
            gap: 0.2rem;
        }
    }
</style>
---
import BlogAstroPost from "../../components/BlogAstroPost.astro";
import AstroLayout from "../../layouts/AstroLayout.astro";
const allPosts = await Astro.glob("../../pages/astro/posts/*.md");
const title = "Mon blog d'apprentissage Astro";
---

<AstroLayout title={title}>
    <section>
        <h1>{title}</h1>
        <div>
            <p>Voici o√π je vais publier mon parcours d'apprentissage d'Astro.</p>
            <ul>
                {allPosts.map((post) => 
                    <BlogAstroPost 
                        src="../../post.jpg"
                        url={post.url}
                        title={post.frontmatter.title}
                    />
                )}
                <!-- <li><a href="/astro/posts/post-1/">Article 1</a></li>
                <li><a href="/astro/posts/post-2/">Article 2</a></li>
                <li><a href="/astro/posts/post-2/">Article 3</a></li> -->
            </ul>
        </div>
    </section>
</AstroLayout>

<style>
    ul{
        list-style: none;
        padding: 0;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        gap: 1rem;
    }
</style>